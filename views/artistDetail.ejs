<%- include("partials/header") %>

<div class="artist-profile">
    <img src="<%= artist.imageUrl %>" alt="<%= artist.name %>">
    <h2><%= artist.name %></h2>
    <p><%= artist.description %></p>
    <p>Age: <%= artist.age %></p>
    <p>Active: <%= artist.isActive ? 'Yes' : 'No' %></p>
    <p>Birth Date: <%= artist.birthDate %></p>
    <p>Genre: <%= artist.genre %></p>
    <p>Instruments: <%= artist.instruments.join(', ') %></p>
    <p>Record Label: <%= artist.recordLabel.name %></p>
    <button>
        <a href="/bands">BACK</a>
    </button>
    <button>
        <a href="/label/<%=artist.recordLabel.id %>">Label Detail</a>
    </button>
</div>

<%- include("partials/footer") %>